<h1>投稿を編集</h1>

<%= form_with(model: @post, local: true) do |form| %>
  <div>
    <%= form.label :title, "タイトル" %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, "内容" %><br>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit "更新する" %>
  </div>
<% end %>
