<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<%= link_to "編集", edit_post_path(@post) %> |
<%= link_to "一覧に戻る", posts_path %>

<h2>コメント</h2>
<%= form_with(model: [@post, @post.comments.build], local: true) do |form| %>
  <div>
    <%= form.text_area :content, rows: 3 %>
  </div>
  <%= form.submit "コメントする" %>
<% end %>

<ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.content %></li>
  <% end %>
</ul>
