<h1>Rails 掲示板アプリ</h1>

<div class="button-container">
  <%= link_to "新しい投稿", new_post_path, class: "link-button" %>
</div>

<ul>
  <% @posts.each do |post| %>
  <li>
    <h2><%= link_to post.title, post_path(post) %></h2>
    <p><%= truncate(post.content, length: 100) %></p>
    <span>
      <small><%= post.created_at.strftime('%Y年%m月%d日 %H:%M') %></small>
    </span>
    <div class="edit-delete-wrapper">
      <%= link_to "詳細", post_path(post), class: "link-button" %>
      <%= link_to "編集", edit_post_path(post), class: "link-button" %> 
      <%= button_to "削除", post_path(post), method: :delete, class: "link-delete-button", confirm: '本当に削除しますか？' %>
    </div>
  </li>
  <% end %>
</ul>